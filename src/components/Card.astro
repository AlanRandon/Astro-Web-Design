---
interface Props {
  children: any
}
---

<style is:global>
  @tailwind utilities;

  @layer utilities {
    .border-layer {
      background-image: linear-gradient(
        to right,
        theme(colors.teal.500) 10%,
        theme(colors.lime.500) 25% 30%,
        transparent 50%
      );
      background-position: right;
      background-size: 200%;
      background-repeat: no-repeat;
      @apply transition-[background,opacity] duration-1000;
    }

    .border-layer:hover {
      background-position: left;
    }

    :hover > .border-layer:not(:hover) {
      opacity: 0.7;
    }

    .content-layer {
      background-image: radial-gradient(
        theme(colors.slate.700 / 90%) 0 5%,
        transparent 5% 100%
      );
      background-repeat: repeat;
      background-size: 3rem 3rem;
      background-position: center;
      @apply bg-slate-800/90;
    }
  }
</style>

<section class="rounded p-[0.125rem] grid border-layer">
  <div class="rounded p-4 grid gap-4 font-sans content-layer">
    <h2 class="text-white text-xl"><slot name="title" /></h2>
    <slot />
  </div>
</section>
