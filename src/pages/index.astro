---
import Layout from "@layouts/Layout.astro"
import Card from "@components/Card.astro"
import Button from "@components/Button.astro"
---

<style>
  @tailwind utilities;

  body {
    background-image: radial-gradient(
      circle at 0% 0%,
      theme(colors.slate.800) 10%,
      theme(colors.slate.900)
    );
    background-attachment: fixed;
    @apply bg-slate-800 text-white/70 p-4;
  }

  @layer utilities {
    .grid-blocks {
      grid-template-columns: repeat(auto-fit, minmax(40ch, 1fr));
      @apply grid justify-items-center gap-4;
    }

    .header-gradient {
      background: linear-gradient(
        to right,
        theme(colors.teal.500),
        theme(colors.lime.500)
      );
      background-clip: text;
      color: transparent;
    }
  }
</style>

<Layout title="Web App">
  <header class="text-white grid place-items-center min-h-[100vh] p-4">
    <div class="flex gap-4 header-gradient">
      <h1 class="p-4 text-[clamp(2rem,10vw,6rem)] font-bold">
        Lorem
        <br />
        Appsum
      </h1>
    </div>
  </header>
  <main class="grid-blocks card-parent">
    <Card>
